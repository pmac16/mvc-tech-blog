<div class="container">
  <br><br>
<div class="row">
  <h1 class="header center orange-text">Log In To Your Account</h1>
  <form class="login-form col s12">
    <div class="row">
      <div class="input-field col s12">
        <input id="email-login" type="email" class="validate">
        <label for="email-login">Username</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input id="password-login" type="password" class="validate">
        <label for="password-login">Password</label>
      </div>
    </div>
    <button class="btn waves-effect waves-light" type="submit" name="action">
      Log In<i class="material-icons right">send</i>
    </button>
    <button class="btn waves-effect waves-light" type="submit" name="action">
      <a href="/signup" type="submit">Sign Up</button>
  </div>
</form>


<script src = "javascript/login.js"></script>