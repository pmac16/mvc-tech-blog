<article class="post">
      <div class="title">
        <a href="/post/{{id}}" target="_blank" class="post-title">{{title}}</a>
        <span>By ({{user.username}})</span>
        <div>
          {{post_body}}
        </div>
      </div>
      <div class="meta">
        <a href="/post/{{id}}" class="comment-title">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        <span>Created on {{format_date created_at}}</span>
      </div>
    </article>